root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# CRLF for viewing text files in Windows.
[*.txt]
end_of_line = crlf

# Tabs are not valid in YAML.
[*.yml]
indent_style = space
indent_size = 2

# Two trailing spaces indicate a line break in Markdown.
[*.md]
trim_trailing_whitespace = false
